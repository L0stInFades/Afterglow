<Window
    x:Class="UltraImageViewer.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UltraImageViewer.WinUI">

    <Grid UseLayoutRounding="True" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <!-- Welcome Page -->
        <Grid x:Name="WelcomeRoot" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="600" Spacing="16">
                <TextBlock Text="UltraImageViewer" FontSize="32" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="AnimText" FontFamily="Consolas" HorizontalAlignment="Center"/>
                <Button x:Name="OpenButton" Content="Open" Click="OnOpenClicked" HorizontalAlignment="Center" Width="120"/>
                <TextBlock Text="Recent" FontSize="16" Margin="0,20,0,8" HorizontalAlignment="Center"/>
                <ListView x:Name="RecentList" IsItemClickEnabled="True" ItemClick="OnRecentItemClick" MaxHeight="300"/>
            </StackPanel>
        </Grid>

        <!-- Main View -->
        <TabView x:Name="TabView"
                 Visibility="Collapsed"
                 TabCloseRequested="OnTabCloseRequested"
                 UseLayoutRounding="True">
        </TabView>
    </Grid>
</Window>
